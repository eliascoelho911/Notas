<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AppTheme.TextAppearance" />

    <style name="AppTheme.TextAppearance.Body2">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ItemDrawer">
        <item name="itemTextAppearance">@style/AppTheme.TextAppearance.Body2</item>
        <item name="itemTextColor">@color/text_drawer</item>
        <item name="itemIconTint">@color/icon_drawer</item>
        <item name="itemShapeFillColor">@color/colorPrimaryDark</item>
        <item name="itemShapeInsetStart">0dp</item>
        <item name="itemShapeAppearance">@style/AppTheme.ItemDrawerShapeAppearance</item>
        <item name="itemIconPadding">16dp</item>
    </style>

    <style name="AppTheme.ItemDrawerShapeAppearance">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>